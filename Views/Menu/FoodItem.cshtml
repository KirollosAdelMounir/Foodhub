@model FoodHub.Models.FoodItem

<div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
    <div class="card border-0 shadow w-100" style="width: 18rem;">
        <a asp-controller="Menu" asp-action="Details" asp-route-id="@Model.FoodItemId">
            <img src="https://images.unsplash.com/photo-1586190848861-99aa4a171e90?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=440&q=80" class="card-img-top" alt="...">
        </a>
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => modelItem.FoodItemName)</h5>
            <h5 class="card-text mb-4 muted">Price: @Html.DisplayFor(modelItem => modelItem.Price)</h5>
            <a asp-controller="Order" asp-action="AddNewItem" asp-route-id="@Model.FoodItemId" class="card-link btn btn-primary w-100">Add to cart</a>
        </div>
    </div>
</div>
