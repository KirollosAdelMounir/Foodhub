@model Eatable.Models.FoodItem

<style>
    a {
        text-decoration: none
    }
</style>

<div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
    <div class="card border-0 shadow w-100" style="width: 18rem;">
        <a asp-controller="Menu" asp-action="Details" asp-route-id="@Model.FoodItemId">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => modelItem.FoodItemName)</h5>
                <h5 class="card-text mb-4 muted">Price: @Html.DisplayFor(modelItem => modelItem.Price)</h5>
                <a asp-action="AddNewItem" asp-controller="Order" Asp-route-id="@Model.FoodItemId" class="card-link btn btn-primary w-100">Add to cart</a>
            </div>
        </a>
    </div>
</div>
